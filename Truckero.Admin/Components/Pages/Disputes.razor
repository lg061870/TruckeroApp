@page "/disputes"

<!-- Top Header -->
<header id="header" class="bg-white h-16 flex items-center justify-between px-6 border-b">
    <div class="flex items-center">
        <input type="text" placeholder="Search..." class="bg-gray-100 px-4 py-2 rounded-lg w-64">
    </div>
    <div class="flex items-center space-x-4">
        <button class="p-2 hover:bg-gray-100 rounded-full">
            <i class="fa-regular fa-bell text-gray-600"></i>
        </button>
        <div class="flex items-center">
            <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-3.jpg" class="w-8 h-8 rounded-full">
            <span class="ml-2">Admin User</span>
        </div>
    </div>
</header>

<!-- Users Management Content -->
<div id="users-management" class="p-6">
    <!-- Page Header -->
    <div id="page-header" class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Manage Users</h1>
        <button class="bg-[#FF6B00] text-white px-4 py-2 rounded-lg flex items-center">
            <i class="fa-solid fa-plus mr-2"></i>
            Add New User
        </button>
    </div>

    <!-- Filters Section -->
    <div id="filters-section" class="bg-white p-6 rounded-xl shadow-sm mb-6">
        <div class="flex flex-wrap gap-4">
            <div class="flex-1">
                <div class="relative">
                    <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                    <input type="text" placeholder="Search by name, email or ID..." class="w-full pl-10 pr-4 py-2 border rounded-lg">
                </div>
            </div>
            <select class="border rounded-lg px-4 py-2">
                <option>All Roles</option>
                <option>Customer</option>
                <option>Driver</option>
                <option>Store Owner</option>
            </select>
            <select class="border rounded-lg px-4 py-2">
                <option>All Status</option>
                <option>Active</option>
                <option>Inactive</option>
            </select>
            <select class="border rounded-lg px-4 py-2">
                <option>Sort By</option>
                <option>Name</option>
                <option>Last Login</option>
                <option>Status</option>
            </select>
        </div>
    </div>

    <!-- Users Table -->
    <div id="users-table" class="bg-white rounded-xl shadow-sm overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">User ID</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Name</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Role</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Email</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Status</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Last Login</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">#USR001</td>
                    <td class="px-6 py-4 flex items-center">
                        <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-1.jpg" class="w-8 h-8 rounded-full mr-3">
                        Sarah Johnson
                    </td>
                    <td class="px-6 py-4"><span class="px-3 py-1 bg-green-100 text-green-600 rounded-full">Driver</span></td>
                    <td class="px-6 py-4">sarah.j@example.com</td>
                    <td class="px-6 py-4"><span class="px-3 py-1 bg-green-100 text-green-600 rounded-full">Active</span></td>
                    <td class="px-6 py-4">2025-02-15 14:30</td>
                    <td class="px-6 py-4">
                        <div class="flex space-x-2">
                            <button class="p-2 hover:bg-gray-100 rounded-lg text-blue-600" title="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                            <button class="p-2 hover:bg-gray-100 rounded-lg text-red-600" title="Deactivate">
                                <i class="fa-solid fa-ban"></i>
                            </button>
                            <button class="p-2 hover:bg-gray-100 rounded-lg text-red-600" title="Delete">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <!-- More user rows... -->
            </tbody>
        </table>

        <!-- Pagination -->
        <div id="pagination" class="px-6 py-4 border-t flex items-center justify-between">
            <p class="text-sm text-gray-500">Showing 1 to 10 of 100 entries</p>
            <div class="flex space-x-2">
                <button class="px-3 py-1 border rounded hover:bg-gray-50">Previous</button>
                <button class="px-3 py-1 border rounded bg-[#1a237e] text-white">1</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">2</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">3</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">Next</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div id="edit-user-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-xl w-[600px] max-h-[80vh] overflow-y-auto">
        <div class="p-6 border-b flex justify-between items-center">
            <h2 class="text-xl font-bold">Edit User</h2>
            <button class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium mb-2">Full Name</label>
                    <input type="text" value="Sarah Johnson" class="w-full px-4 py-2 border rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Email</label>
                    <input type="email" value="sarah.j@example.com" class="w-full px-4 py-2 border rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Phone</label>
                    <input type="tel" value="+1 234 567 8900" class="w-full px-4 py-2 border rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Role</label>
                    <select class="w-full px-4 py-2 border rounded-lg">
                        <option>Customer</option>
                        <option selected>Driver</option>
                        <option>Store Owner</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Status</label>
                    <div class="flex items-center space-x-4">
                        <label class="flex items-center">
                            <input type="radio" name="status" checked class="mr-2">
                            Active
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="status" class="mr-2">
                            Inactive
                        </label>
                    </div>
                </div>
                <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">
                    Send Password Reset Email
                </button>
            </div>
        </div>
        <div class="p-6 border-t bg-gray-50 flex justify-end space-x-4">
            <button class="px-4 py-2 border rounded-lg hover:bg-gray-100">Cancel</button>
            <button class="px-4 py-2 bg-[#FF6B00] text-white rounded-lg hover:bg-[#FF6B00]/90">Save Changes</button>
        </div>
    </div>
</div>


