@* ReferentialIntegrityBottomSheet.razor *@

<div class="fixed inset-0 z-50 flex items-end justify-center bg-black bg-opacity-50">
    <div class="w-full sm:max-w-md bg-white rounded-t-2xl p-6 shadow-lg animate-slide-up">
        <div class="text-center">
            <i class="fa-solid fa-link-slash text-4xl text-red-500 mb-3"></i>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">@Title</h3>
            <p class="text-sm text-gray-600 mb-4">
                @Message
                @if (!string.IsNullOrWhiteSpace(Details))
                {
                    <br />
                    <span class="text-xs text-gray-500">@Details</span>
                }
            </p>

            <div class="flex flex-col items-center gap-3 mt-4">

                @if (PrimaryAction.HasDelegate)
                {
                    <button class="px-4 py-2 bg-[#FF6B00] text-white rounded-lg hover:bg-[#e66000]"
                            @onclick="PrimaryAction">
                        @PrimaryActionLabel
                    </button>
                }

                @if (SecondaryAction.HasDelegate)
                {
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200"
                            @onclick="SecondaryAction">
                        @SecondaryActionLabel
                    </button>
                }

                <button class="px-4 py-2 bg-gray-50 text-gray-400 rounded-lg mt-2"
                        @onclick="OnDismiss">
                    Dismiss
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Referential Integrity Error";
    [Parameter] public string Message { get; set; } = "An issue was detected while processing your request.";
    [Parameter] public string? Details { get; set; }

    [Parameter] public string PrimaryActionLabel { get; set; } = "Retry";
    [Parameter] public EventCallback PrimaryAction { get; set; }

    [Parameter] public string? SecondaryActionLabel { get; set; }
    [Parameter] public EventCallback SecondaryAction { get; set; }

    [Parameter] public EventCallback OnDismiss { get; set; }
}
