@page "/requestfreight"

<div class="h-full text-base-content">
    <div id="app" class="min-h-screen bg-gray-50">
        <div id="request-freight-screen" class="p-6 min-h-screen">
            <!-- Header -->
            <div class="flex items-center mb-8">
                <button class="text-gray-600" @onclick="GoBack">
                    <i class="fa-solid fa-arrow-left text-xl"></i>
                </button>
                <div class="text-center flex-1 mr-8">
                    <h2 class="text-xl font-semibold">Request Freight Flow</h2>
                </div>
            </div>

            <!-- WIP Message -->
            <div class="text-center mt-20">
                <div class="inline-block p-6 bg-yellow-100 rounded-full mb-6">
                    <i class="fa-solid fa-triangle-exclamation text-4xl text-yellow-600"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Coming Soon</h3>
                <p class="text-gray-600 text-sm">
                    This screen will guide customers through freight job creation.
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager NavManager { get; set; } = default!;

    private void GoBack()
    {
        NavManager.NavigateTo("/");
    }
}

