@page "/paymentmethoddashboard"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

<div class="h-full text-base-content">
    <div id="creditcard-paymentmethod" class="min-h-screen bg-gray-50 p-6">
        <div id="registration-header" class="flex items-center mb-8">
            <div class="text-center flex-1 mr-8">
                <h2 class="text-xl font-semibold">Wallet</h2>
            </div>
        </div>

        <div class="border border-gray-300 rounded-lg shadow-sm p-3 mb-6">
            <!-- Saved Payment Methods Section -->
            <div id="saved-cards" class="p-3 mb-6">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-[#1A237E] font-semibold">Saved Payment Methods</h3>
                    <button class="text-[#FFA500]">
                        <i class="fa-solid fa-plus"></i> Add New
                    </button>
                </div>

                <div id="card-list" class="space-y-4">
                    <div id="card-1" class="border border-gray-200 rounded-lg p-4">
                        <div class="flex justify-between items-center mb-2">
                            <div class="flex items-center gap-3">
                                <i class="fa-brands fa-cc-visa text-2xl text-[#1A237E]"></i>
                                <span class="font-medium">•••• 4589</span>
                            </div>
                            <button class="text-gray-400">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </div>
                        <p class="text-sm text-gray-500">Expires 08/25</p>
                    </div>

                    <div id="card-2" class="border border-gray-200 rounded-lg p-4">
                        <div class="flex justify-between items-center mb-2">
                            <div class="flex items-center gap-3">
                                <i class="fa-brands fa-cc-mastercard text-2xl text-[#1A237E]"></i>
                                <span class="font-medium">•••• 7852</span>
                            </div>
                            <button class="text-gray-400">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </div>
                        <p class="text-sm text-gray-500">Expires 11/26</p>
                    </div>
                </div>
            </div>

            <!-- Digital Wallets Section -->
            <div id="digital-wallets" class="p-3 mb-6">
                <h3 class="text-[#1A237E] font-semibold mb-4">Digital Wallets</h3>
                <div class="space-y-3">
                    <button class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg">
                        <div class="flex items-center gap-3">
                            <i class="fa-brands fa-paypal text-[#00457C] text-xl"></i>
                            <span class="font-medium">PayPal</span>
                        </div>
                        <i class="fa-solid fa-chevron-right text-gray-400"></i>
                    </button>

                    <button class="flex flex-col items-center justify-center p-3 border-2 border-dashed border-gray-300 rounded-lg hover:border-orange-500 hover:text-orange-500 transition-colors">
                        <i class="fa-solid fa-box text-xl mb-2"></i>
                        <span class="text-xs">Small Load</span>
                    </button>
                    <button class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg">
                        <div class="flex items-center gap-3">
                            <i class="fa-brands fa-google text-[#4285F4] text-xl"></i>
                            <span class="font-medium">Google Pay</span>
                        </div>
                        <i class="fa-solid fa-chevron-right text-gray-400"></i>
                    </button>

                    <button class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg">
                        <div class="flex items-center gap-3">
                            <i class="fa-brands fa-apple text-black text-xl"></i>
                            <span class="font-medium">Apple Pay</span>
                        </div>
                        <i class="fa-solid fa-chevron-right text-gray-400"></i>
                    </button>
                </div>
            </div>
        </div>


        <div id="billing-address" class="p-3 mb-6">
            <h3 class="text-[#1A237E] font-semibold mb-4">Billing Address</h3>
            <div class="space-y-4">
                <div>
                    <label class="text-sm text-gray-600 mb-2 block">Street Address</label>
                    <input type="text" class="w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:border-[#FFA500]">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="text-sm text-gray-600 mb-2 block">City</label>
                        <input type="text" class="w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:border-[#FFA500]">
                    </div>
                    <div>
                        <label class="text-sm text-gray-600 mb-2 block">ZIP Code</label>
                        <input type="text" class="w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:border-[#FFA500]">
                    </div>
                </div>
            </div>
        </div>

        <button class="w-full bg-[#FFA500] text-white py-4 rounded-[18px] font-semibold text-lg shadow-lg hover:bg-[#FF9000] transition-colors mb-6">
            Save Changes
        </button>

    </div>
</div>
